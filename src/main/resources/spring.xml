<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--triangle-->
    <bean id="Triangle" class="com.mandala.spring.SpringDemo.Triangle" autowire="byName">

    </bean>

    <!--points-->
    <bean id="pointA" class="com.mandala.spring.SpringDemo.Point" scope="prototype">
        <property name="x" value="${pointA.pointX}"/>
        <property name="y" value="${pointA.pointY}"/>
    </bean>
    <bean  id="pointB" class="com.mandala.spring.SpringDemo.Point" scope="prototype">
        <property name="x" value="20"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="pointC" class="com.mandala.spring.SpringDemo.Point" scope="prototype">
        <property name="x" value="0"/>
        <property name="y" value="20"/>
    </bean>

    <!--BeanFactoryPostProcessor-->
    <bean class="com.mandala.spring.SpringDemo.MyBeanFactoryPP"/>
    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="location" value="point-config.properties"/>
    </bean>
</beans>
