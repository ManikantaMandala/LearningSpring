<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--triangle-->
    <bean id="parentTriangle" class="com.mandala.spring.SpringDemo.Triangle" abstract="true">
        <property name="points">
            <list>
                <ref bean="pointA"/>
            </list>
        </property>
        <property name="pointA" ref="pointA"/>
    </bean>

    <bean id="childTriangle" class="com.mandala.spring.SpringDemo.Triangle" autowire="byName" parent="parentTriangle">
        <property name="points">
            <list merge="true">
                <ref bean="pointB"/>
            </list>
        </property>
    </bean>

    <!--points-->
    <bean id="pointA" class="com.mandala.spring.SpringDemo.Point" scope="prototype">
        <property name="x" value="0"/>
        <property name="y" value="0"/>
    </bean>
    <bean  id="pointB" class="com.mandala.spring.SpringDemo.Point" scope="prototype">
        <property name="x" value="20"/>
        <property name="y" value="0"/>
    </bean>
    <bean id="pointC" class="com.mandala.spring.SpringDemo.Point" scope="prototype">
        <property name="x" value="0"/>
        <property name="y" value="20"/>
    </bean>

</beans>
