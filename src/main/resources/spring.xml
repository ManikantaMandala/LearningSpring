<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="triangle" class="com.mandala.spring.SpringDemo.Triangle">
        <property name="type" value="Equilateral"/>
        <property name="height" value="20"/>
<!--        <constructor-arg type="java.lang.String" value="Equilateral"/>-->
<!--        <constructor-arg type="int" value="20"/>-->
    </bean>
    <bean id="tri" class="com.mandala.spring.SpringDemo.Triangle">
        <constructor-arg type="java.lang.String" value="Isosceles"/>
        <constructor-arg type="int" value="20"/>
    </bean>

</beans>
